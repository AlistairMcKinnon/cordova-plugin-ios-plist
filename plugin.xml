<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="cordova-plugin-ios-no-export-compliance" version="0.0.1">
    <name>iOS No Export Compliance</name>
    <description>This plugin set ITSAppUsesNonExemptEncryption to false in *-Info.plist file</description>
    <license>BSD-3</license>
    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>
    <preference name="USES_NON_EXEMPT_ENCRYPTION" />
    <!-- ios -->
    <platform name="ios">
        <config-file target="*-Info.plist" parent="CFBundleURLTypes">
            <array>
                <dict>
                    <key>ITSAppUsesNonExemptEncryption</key>
                    <bool>$USES_NON_EXEMPT_ENCRYPTION}<bool/>
                </dict>
            </array>
        </config-file>
    </platform>
</plugin>
